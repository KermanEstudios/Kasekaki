-- Ubicación a la que quieres atraer a los jugadores
local objetivo = workspace.Part -- Cambia esto al objeto que desees

-- Función para mover a los jugadores hacia el objetivo
local function atraerJugadores()
    for _, jugador in pairs(game.Players:GetPlayers()) do
        local personaje = jugador.Character
        if personaje and personaje:FindFirstChild("HumanoidRootPart") then
            local humanoideRootPart = personaje.HumanoidRootPart
            humanoideRootPart.CFrame = objetivo.CFrame
        end
    end
end

-- Ejecutar la función para atraer a los jugadores
atraerJugadores()

-- Repetir el proceso cada segundo
while true do
    atraerJugadores()
    wait(1) -- Cambia este valor para ajustar la frecuencia
end
