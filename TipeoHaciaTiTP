local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Verifica que el jugador y su personaje est치n disponibles
if player and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
    local playerPosition = player.Character.HumanoidRootPart.Position

    local function bringAllPlayersToMe(position)
        local players = Players:GetPlayers()

        for _, otherPlayer in pairs(players) do
            if otherPlayer.Character and otherPlayer.Character:FindFirstChild("HumanoidRootPart") then
                local humanoidRootPart = otherPlayer.Character.HumanoidRootPart
                local originalCFrame = humanoidRootPart.CFrame
                -- Cambia solo la posici칩n, manteniendo la orientaci칩n original
                humanoidRootPart.CFrame = CFrame.new(position, originalCFrame.LookVector)
            end
        end
    end

    -- Bucle infinito para mover a todos los jugadores a la posici칩n del jugador cada 5 segundos
    while true do
        bringAllPlayersToMe(playerPosition)
        wait(5) -- Espera 5 segundos antes de ejecutar de nuevo
    end
else
    warn("El jugador no tiene un HumanoidRootPart.")
end
