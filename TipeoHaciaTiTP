-- Función para teletransportar a todos los jugadores a la posición del jugador especificado
local function teleportPlayersTo(player)
    local playerPosition = player.Character and player.Character:FindFirstChild("HumanoidRootPart") and player.Character.HumanoidRootPart.Position
    
    if playerPosition then
        for _, otherPlayer in pairs(game.Players:GetPlayers()) do
            if otherPlayer.Character and otherPlayer.Character:FindFirstChild("HumanoidRootPart") then
                otherPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(playerPosition)
            end
        end
    end
end

-- Obtener el jugador que ejecuta el script
local player = game.Players.LocalPlayer

-- Bucle infinito para teletransportar continuamente
while true do
    teleportPlayersTo(player)
    wait(1) -- Espera 5 segundos antes de teletransportar nuevamente
end
